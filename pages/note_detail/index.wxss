.body {
    margin: 40rpx;
    font-size: 36rpx;
}
.header {
    
}
.header .title {
    font-size: 42rpx;
    font-weight: bold;
}
.user-info {
    display: flex;
    flex-direction: row;
    margin-top: 50rpx;
}
.user-avatar-wrap {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.user-avatar {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.note-info {
    margin-left: 50rpx;
    font-size: 24rpx;
    color: #888;
}

.username {
    color: #000;
    font-size: 26rpx;
}
.note-content {
    margin-top: 60rpx;
    line-height: 50rpx;
    letter-spacing: 2rpx;
}
.the-end {
    margin: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: rgb(221, 217, 217);
}
.the-end::before, .the-end::after{
    content: '——'
}
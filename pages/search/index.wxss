.body {
    width: 100%;
    height: 100%;

}
.search-wrap {
    width: 100%;
    height: 80rpx;
    /* padding: 10rpx; */
    display: flex;
    flex-direction: row;
    align-items: center;
}
.search-icon {
    display: block;
    margin-left: 50rpx;
}
.search-input {
    flex: 1;
    margin-left: 20rpx;
    padding:10rpx;
    font-size: 32rpx;
}
.cancel {
    color: #ccc;
    font-size: 32rpx;
    margin-right: 20rpx;
}
.result-list {
    width: 700rpx;
    margin: 25rpx;
}
.book-item-wrap {
    width: 100%;
    height: 200rpx;
    margin: 20rpx 0;
    display: flex;
}
.book-photo-wrap {
    width: 130rpx;
    height: 180rpx;

}
.book-photo {
    width: 100%;
    height: 100%;
}
.book-info {
    margin-left: 50rpx;
}
.book-title {
    font-size: 36rpx;
    font-weight: bold;

}

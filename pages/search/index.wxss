.body {
    width: 100%;
    height: 100%;
    background-color: rgb(247, 247, 244);
    font-size: 24rpx;
}
.search-wrap {
    width: 100%;
    height: 80rpx;
    /* padding: 10rpx; */
    display: flex;
    flex-direction: row;
    align-items: center;
}
.search-icon {
    display: block;
    margin-left: 50rpx;
}
.search-input {
    flex: 1;
    margin-left: 20rpx;
    padding:10rpx;
    font-size: 32rpx;
}
.cancel {
    color: #ccc;
    font-size: 32rpx;
    margin-right: 20rpx;
}
.result-list {
    width: 700rpx;
    margin: 25rpx;
}
.book-item-wrap {
    width: 100%;
    height: 200rpx;
    margin: 20rpx 0;
    display: flex;
}
.book-photo-wrap {
    width: 130rpx;
    height: 180rpx;

}
.book-photo {
    width: 100%;
    height: 100%;
}
.book-info {
    margin-left: 50rpx;
    flex: 1;
}
.book-title {
    font-size: 36rpx;
    font-weight: bold;

}
.publish-info {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #aaa
}
.search-history {

}
.history-title {
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx 40rpx;
    display: flex;
    justify-content: space-between;
    color: #888;
}
.history-title text {
    display: block;
}
.history-content {

}
.history-item {
    font-size: 28rpx;
    padding: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid rgb(238, 233, 233);
}

.body {
    width: 100%;
    height: 100%;
    background-color: rgb(247, 247, 244);
    font-size: 26rpx;
}
.book-banner {
    width: 100%;
    height: 530rpx;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    background-color: rgb(197, 192, 175);
}
.book-photo-wrap {
    width: 300rpx;
    height: 440rpx;
    
}
.book-photo {
    width: 100%;
    height: 100%;
}
.content {
    margin: 35rpx;
}
.book-info {
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.book-title {
    display: flex;
    flex-direction: column;
}
.book-title .title {
    font-weight: bold;
    font-size: 44rpx;
}
.book-pub-info {
    margin-top: 30rpx;
    font-size: 22rpx;
    color: rgb(185, 183, 183);
}
.book-pub-info text {
    display: block;
}
.book-rating {
    width: 200rpx;
    height: 200rpx;
    background-color: #fff;
    box-shadow: 0 0 15px #888;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.book-rating text {
    display: block;
    font-size: 22rpx;
    color: rgb(185, 183, 183);
}
.book-rating text:nth-child(2) {
    font-size: 40rpx;
    font-weight: bold;
    color: #000;
}
.intro-wrap {
    margin-top: 30rpx;
}
.intro-title {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #888;
    display: flex;
    justify-content: space-between;
}
.intro-title text {
    display: block;
}
.show-all-btn {
    color: rgb(8, 218, 25);
}
.intro-text {
    margin-top: 20rpx;
    
}
.normal {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:4; 
}
.show-all {

}
.notes-list {
    margin-top: 50rpx;
    white-space: nowrap;
}
.note-item {
    display: inline-block;
    width:600rpx;
    height: 360rpx;
    background-color: #fff;
    border: 1px solid rgb(236, 236, 236);

}
.note-item:not(:first-child) {
    margin-left: 20rpx;
}
.item-wrap {
    height: 300rpx;
    margin: 30rpx 20rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}
.page-no {
    font-size: 32rpx;
}
.note-content {
    margin-top: 10rpx;
    
    flex: 1;
    white-space: normal;
    overflow:hidden; 
    text-overflow:ellipsis;
     display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:4; 
}
.author-info {
    display: flex;
    justify-content: space-between;
    position:absolute;
    width:100%;
    left:0;
    bottom:-20rpx;

}
.author-info text {
    display: block;
    font-size: 22rpx;
    color: rgb(185, 183, 183);

}